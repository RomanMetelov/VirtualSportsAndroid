<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_background"
    android:padding="@dimen/category_item_padding">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCategoryIcon"
        android:layout_width="@dimen/category_icon_width"
        android:layout_height="@dimen/category_icon_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/parimatch"
        android:textColor="@color/white"
        android:textSize="@dimen/category_name_textSize"
        app:fontFamily="@font/parimatch"
        app:layout_constraintBottom_toBottomOf="@id/ivCategoryIcon"
        app:layout_constraintLeft_toRightOf="@id/ivCategoryIcon"
        app:layout_constraintTop_toTopOf="@id/ivCategoryIcon"
        tools:text="Category name" />
</androidx.constraintlayout.widget.ConstraintLayout>